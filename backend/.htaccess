# Bloquear acesso a arquivos sensíveis de configuração e lógica interna
<FilesMatch "^(config\.php|secrets\.php|whitelist\.php|composer\.json|\.env)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block setup page after initial configuration
RewriteEngine On
RewriteCond %{REQUEST_URI} /backend/setup\.php$ [NC]
RewriteCond %{DOCUMENT_ROOT}/\.env -f
RewriteCond %{DOCUMENT_ROOT}/backend/secrets\.php -f
RewriteRule ^setup\.php$ - [F,L]

# Bloquear listagem
Options -Indexes

